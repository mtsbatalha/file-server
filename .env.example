# Environment Configuration Example
# Copy this file to .env and modify as needed

# Application
APP_NAME="File Server Management System"
APP_VERSION="1.0.0"
DEBUG=false

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database
# SQLite (default)
DATABASE_URL=sqlite:///./fileserver.db
# PostgreSQL (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/fileserver

DATABASE_ECHO=false

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=change-this-secret-key-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage
STORAGE_BASE_PATH=/opt/file-server/storage
MAX_UPLOAD_SIZE_MB=5000

# SSL/TLS
SSL_ENABLED=false
LETSENCRYPT_ENABLED=false
LETSENCRYPT_EMAIL=your-email@example.com
LETSENCRYPT_DOMAIN=fileserver.example.com

# Quotas
DEFAULT_USER_QUOTA_GB=100
QUOTA_CHECK_INTERVAL_MINUTES=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/fileserver.log

# Redis
REDIS_URL=redis://localhost:6379/0

# Default Admin User (CHANGE PASSWORD!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@localhost

# Firewall
AUTO_CONFIGURE_FIREWALL=true
